{% extends 'baseTherapist.html.twig' %}

{% block title %}Création d'un Pictogramme Fruits et Legumes| PictoPicto{% endblock %}

{% block content %}

    <span class="title">PictoFruitsEtLegumes, Catégories </span>
<div class="d-flex justify-content-between">
                  
         <!-- btn création catégories et picotgrammes -->
        <div class="pictoactions">
               <a href="{{ path('app_picto_fruits_legumes_new') }}" class="btn btn-dark btn-sm">PictoFruitsLegumes</a>
            
        </div>
<!-- btn pour retour à la page PictiPcto qui regroupe toutes les pictotgrammes -->
        {# <div class="PictoPicto">
         <a href="{{ path('app_picto_picto') }}" class="btn btn-dark btn-sm">retour liste PictoPicto</a>
         </div>  #}
</div>
<div class="container-fluid mt-3 p-4 background">
        <div class="row">
            <div class="col-12">
                {% for message in app.flashes('success') %}
                    <div class="alert alert-success">
                        {{ message }}
                    </div>
                {% endfor %}
                {% for message in app.flashes('alert') %}
                    <div class="alert alert-danger">{{ message }}</div>
                {% endfor %}
</div>
</div>
</div>

<div id="accordion">
        <div class="p-3 accordion-item d-flex">
                <img class="pictoList" src="{{ asset('images/categories/'~picto_fruits_legumes[0].pictograms.filename) }}" alt=""> 
                <span class="my-auto ms-2 ">{{ picto_fruits_legumes[0].pictograms.name }}</span> 
              
            </div>       

<div class="picto">
        {% for picto_fruits_legume in picto_fruits_legumes %}
                   <div class="ms-md-3">
                     <img class="pictoList"src="{{ asset('images/pictograms/') }}{{ picto_fruits_legume.filename }}" alt=""> 
                    <figcaption class="picText">{{ picto_fruits_legume.name }} </figcaption>
                            
                    </div>
                   
        {% endfor %}
</div>
</div>     
{% endblock %}
     
       